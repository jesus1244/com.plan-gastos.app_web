rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colección de usuarios
    match /users/{userId} {
      // Solo el usuario autenticado puede leer y escribir sus propios datos
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Validaciones adicionales para escritura
      allow update: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.data.keys().hasAny(['defaultIncome', 'defaultExtraIncome', 'defaultExpenses', 'months', 'updatedAt']);
      
      allow create: if request.auth != null 
                    && request.auth.uid == userId;
    }
    
    // Denegar acceso a cualquier otra colección no especificada
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
